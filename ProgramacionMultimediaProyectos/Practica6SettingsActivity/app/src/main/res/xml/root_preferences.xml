<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences_title">

        <EditTextPreference
            app:key="Usuario"
            app:title="@string/user_title"
            app:useSimpleSummaryProvider="true"
            app:defaultValue=" "/>

        <SwitchPreferenceCompat
            app:key="session"
            app:title="@string/session_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/communication_title">

        <SwitchPreferenceCompat
            app:key="edit_communications"
            app:title="@string/edit_communications_text" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/interface_title">

        <CheckBoxPreference
            app:key="show_user"
            app:title="@string/show_user_text" />

    </PreferenceCategory>

</PreferenceScreen>