<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FED9ED "
    android:orientation="vertical"
    tools:context=".MainActivity">


        <org.osmdroid.views.MapView
            android:id="@+id/mapaView"
            android:layout_width="match_parent"
            android:layout_height="350sp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="50sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_layout"
            android:padding="15sp">

            <TextView
                android:id="@+id/nombreView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monumento"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fechaView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/fotoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/descripcionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rellenoDescView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relleno"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/ubicacionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ciudadView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Ciudad" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/latitudView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="Latitud" />

                <TextView
                    android:id="@+id/longitudView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="Longitud" />
            </TableRow>

            <Button
                android:id="@+id/botonComprar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#67729D"
                android:text="" />

            <TextView
                android:id="@+id/mediaView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Media"
                android:textAlignment="center"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>