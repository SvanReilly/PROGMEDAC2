<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/gradient_background_title"
            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:letterSpacing="0.2"
            android:text="POKÃ‰DEX NACIONAL"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editPokeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:ems="10"
            android:inputType="text"
            android:text="Escriba un nombre para el Pokemon"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editPokeURLPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:ems="10"
            android:inputType="text"
            android:text="Escriba una URL para establecer una imagen"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="10sp">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/insertButton"
                android:layout_width="105sp"
                android:layout_height="110sp"
                android:layout_margin="10sp"
                android:backgroundTint="@color/green"
                android:text="@string/insertButton"
                android:textAllCaps="true"
                android:textSize="12sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/removeButton"
                android:layout_width="105sp"
                android:layout_height="110sp"
                android:layout_margin="10sp"
                android:backgroundTint="@color/forGradientRegistrados2"
                android:text="@string/removeButton"
                android:textAllCaps="true"
                android:textSize="12sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TextView
            android:id="@+id/pokemonListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20sp"
            android:background="@drawable/gradient_background_registrados"

            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:letterSpacing="0.2"
            android:padding="5sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="Registrados"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:layout_marginTop="10sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>