<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">

                <View
                    android:id="@+id/dividerTop"
                    android:layout_height="2sp"
                    android:layout_weight="1"
                    android:background="?android:attr/listDivider" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1sp"
                android:layout_marginBottom="1sp">

                <ImageView
                    android:id="@+id/movieCoverView"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="280sp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/movieTitleView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1sp"
                        android:layout_weight="1"
                        android:text="Title"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/movieDirectorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1sp"
                        android:layout_weight="1"
                        android:text="Director"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/movieReleaseDateView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1sp"
                        android:layout_marginBottom="1sp"
                        android:layout_weight="1"
                        android:text="releaseDate"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="italic" />


                </LinearLayout>

                <ImageButton
                    android:id="@+id/imagePlayButtonView"
                    android:layout_width="45sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_margin="3sp"
                    android:contentDescription="playButtonDescription"
                    android:scaleType="fitXY"
                    android:src="@drawable/playbutton" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">

                <View
                    android:id="@+id/dividerBottom"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="?android:attr/listDivider" />
            </TableRow>


        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>